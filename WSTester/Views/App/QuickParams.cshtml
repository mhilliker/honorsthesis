@model System.Reflection.ParameterInfo[]

@{
    ViewBag.Title = "QuickParams";
}

<h2>QuickParams</h2>
<script>
    $(".navbar").hide();
    $("footer").hide();
</script>

@using (Html.BeginForm("QuickParams", "App"))
{
    <!-- Form content goes here -->
    for (int i = 0; i < Model.Length; i++) 
    { 
        <p>( @Model[i].ParameterType.ToString().Substring(Model[i].ParameterType.ToString().Contains(".") ? Model[i].ParameterType.ToString().LastIndexOf(".")+1 : 0) )  @Model[i].Name</p> @Html.TextBox(@Model[i].Name)
    }
    <br />
    <input type="submit" value="Submit" />
}